doctype html
html
  head
    title Menú Principal
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    style.
      body {
        font-family: sans-serif;
        background-color: #f0f0f0;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        height: 100vh;
      }
      .menu {
        background: white;
        border-radius: 8px;
        padding: 20px;
        box-shadow: 0 0 10px rgba(0,0,0,0.1);
        display: flex;
        flex-direction: column;
        gap: 15px;
        width: 300px;
        text-align: center;
      }
      a {
        text-decoration: none;
        color: #333;
        background-color: #e0e0e0;
        padding: 10px;
        border-radius: 5px;
        transition: background-color 0.3s;
      }
      a:hover {
        background-color: #ccc;
      }

  body
    .menu
      h2 Menú Principal
      a(href='/empleados-vista') Empleados
      a(href='/tareas/vista') Tareas
