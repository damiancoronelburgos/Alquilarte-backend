script.
  function toggleSubmenu(id) {
    const submenus = document.querySelectorAll('.submenu');
    submenus.forEach(sm => {
      if (sm.id === id) {
        sm.style.display = sm.style.display === 'flex' ? 'none' : 'flex';
      } else {
        sm.style.display = 'none';
      }
    });
  }



